<%- model_class = Registration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first) %></th>
      <th><%= model_class.human_attribute_name(:last) %></th>
      <th><%= model_class.human_attribute_name(:last2) %></th>
      <th><%= model_class.human_attribute_name(:career) %></th>
      <th><%= model_class.human_attribute_name(:level) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:ci) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:direction) %></th>
      <th><%= model_class.human_attribute_name(:zona) %></th>
      <th><%= model_class.human_attribute_name(:telephone) %></th>
      <th><%= model_class.human_attribute_name(:cellphone) %></th>
      <th><%= model_class.human_attribute_name(:other) %></th>
      <th><%= model_class.human_attribute_name(:health) %></th>
      <th><%= model_class.human_attribute_name(:apoderado) %></th>
      <th><%= model_class.human_attribute_name(:parentesco) %></th>
      <th><%= model_class.human_attribute_name(:telephoneapoderado) %></th>
      <th><%= model_class.human_attribute_name(:directionapoderado) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= link_to registration.id, registration_path(registration) %></td>
        <td><%= registration.first %></td>
        <td><%= registration.last %></td>
        <td><%= registration.last2 %></td>
        <td><%= registration.career %></td>
        <td><%= registration.level %></td>
        <td><%= registration.email %></td>
        <td><%= registration.ci %></td>
        <td><%= registration.city %></td>
        <td><%= registration.direction %></td>
        <td><%= registration.zona %></td>
        <td><%= registration.telephone %></td>
        <td><%= registration.cellphone %></td>
        <td><%= registration.other %></td>
        <td><%= registration.health %></td>
        <td><%= registration.apoderado %></td>
        <td><%= registration.parentesco %></td>
        <td><%= registration.telephoneapoderado %></td>
        <td><%= registration.directionapoderado %></td>
        <td><%=l registration.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_registration_path(registration), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      registration_path(registration),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_registration_path,
            :class => 'btn btn-primary' %>
